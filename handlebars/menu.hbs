<div>
  <div class="close_modal_layer"></div>
</div>

<div class="board_options menu_activity">
  <form action="" method="post">
    <h3>Activity</h3>
    <a class="x_out_card_options_window">
      <span>
        <div class="cross_x"></div>
      </span>
    </a>
    <div id="all_activity">
      {{#each activity}}
      <div class="activity_item">
        <div class="initials_sidebar"><div class="initial_box initial_box_small">RG</div></div>
        <div class="activity_description {{#if this.comment}}activity_description_comment{{/if}}">
          <h2>Ryan Gilbert</h2><h4>{{{this.description}}}</h4>
          <span>{{this.dateTime}}</span>
        </div>
      </div>
      {{/each}}
    </div>
  </form>
</div>
