      cursor: pointer

.board_selector_view
  background-color: colors.blueBackground
  .board_selector_container
    background-color: rgba(0, 0, 0, 0.15)
    &:hover
      background-color: rgba(0, 0, 0, 0.3)


.add_board_view
  display: inline-block
  vertical-align: top
  margin-right: 20px
  margin-top: 20px
  width: 265px
  border-radius: 3px
  .board_selector_container
    display: block
    width: 100%
    height: 100%
    border-radius: 3px
    h2
      display: block
      height: 95px
      text-align: center
      line-height: 95px
      font-weight: normal
      color: colors.grayMed3
      border-radius: 3px
      background-color: colors.grayMed
      &:hover
        cursor: pointer
        background-color: rgba(0, 0, 0, 0.2)
        color: colors.grayDark
    #create_board_menu
      display: none
      position: relative
      padding: 10px
      border: 1px solid colors.grayMed
      box-shadow: 0 1px 1px rgba(0,0,0,.1)
      h3, label
        color: colors.grayMed2
      h3
        padding-bottom: 10px
        font-weight: normal
        text-align: center
        border-bottom: 1px solid colors.grayMed
      a
        position: absolute
        top: 10px
        right: 10px
        height: 20px
        width: 20px
        span
          width: 100%
          height: 100%
          position: relative
        &:hover
          span
            .cross_x, .cross_x:after
              background: colors.grayDark
      label
        display: block
        font-weight: bold
      input[type="text"]
        display: block
        padding: 8px
        width: 100%
        font-size: 14px
        border: 1px solid colors.grayMed
        border-radius: 3px
      label, input
        margin-top: 8px

#board_view
  #board_header
    position: absolute
    top: 0
    left: 0
    right: 0
    overflow: hidden
    padding: 10px
    z-index: 10
  .board_header_button
    display: inline-block
    margin-right: 8px
    height: 30px
    border-radius: 3px
    span, input, h1
      height: 100%
    &:hover
      > a h1, > a span
        background: rgba(0, 0, 0, 0.15)
    span, h1
      display: inline-block
      padding: 0 10px
      line-height: 30px
      color: colors.grayLight
      border-radius: 3px
    h1
      font-size: 18px

  #board_title, #star_icon
    float: left
  #show_menu
    float: right

  #star_icon
    span:before
      height: 30px
      width: 30px
      position: relative
      top: 5px
      content: url("../images/star_icon.png")
  #star_icon.starred
    background-color: rgba(0, 0, 0, .15)
    span:before
      content: url("../images/star_icon_yellow.png")

  #show_menu
    span
      font-size: 13px
      text-decoration: underline
    span:before
      margin-right: 3px
      margin-left: -5px
      height: 30px
      width: 30px
      position: relative
      top: 6px
      content: url("../images/ellipsis_icon.png")


.lists_wrapper
  position: relative
  display: block
  flex-grow: 1
  margin-bottom: 10px
#lists
  position: absolute
  display: block
  padding: 50px 5px 0 5px
  width: auto
  height: 100%
  top: 0
  bottom: 0
  left: 0
  right: 0
  padding-bottom: 20px
  overflow-x: auto
  overflow-y: hidden
  white-space: nowrap
  user-select: none
  &::-webkit-scrollbar
    width: 1em
  &::-webkit-scrollbar-track
    margin: 10px
    border-radius: 10px
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3)
  &::-webkit-scrollbar-thumb
    border-radius: 10px
    background-color: colors.blueLight
    outline: 1px solid slategrey

#lists_container
  display: inline-block
  height: 100%

.list_view, .add_list_view
  position: relative
  display: inline-block
  width: 270px
  margin: 0 5px
  vertical-align: top
  white-space: nowrap
  user-select: none

.add_list_view
  #add_list_title
    display: block
    padding: 0 8px
    line-height: 40px
    color: colors.blueLight2
    background: rgba(0, 0, 0, 0.15)
    border-radius: 3px
    &:hover
      background: rgba(0, 0, 0, 0.3)
  form
    display: none
    padding: 5px
    background-color: colors.grayMed
    border-radius: 3px
    input[type="text"]
      display: block
      width: 100%
      padding: 0 8px
      border: 1px solid colors.grayMed2
      border-radius: 3px
      background-color: colors.grayLight3
      font-size:13px
      line-height: 30px
      color: colors.grayDark
      box-shadow: -1px -1px 2px colors.grayMed2;
    #add_list_submit_or_cancel
      display: block
      margin-top: 5px
      input[type="submit"], #cancel_add_list
        display: inline-block
        vertical-align: top
      #cancel_add_list
        width: 30px
        height: 30px
        margin-left: 10px
        a
          display: block
          width: 100%
          height: 100%
          padding: 5px
          position: relative
          span
            width: 100%
            height: 100%
            position: relative
          &:hover
            span
              .cross_x, .cross_x:after
                background: colors.grayDark

.list_view
  height: 100%
  color: colors.grayDark

.list_item_wrapper
  display: flex
  position: relative
  flex-direction: column
  max-height: 100%
  min-height: 70px
  background-color: colors.grayMed
  border-radius: 3px
  white-space: normal
  box-shadow: 0 1px 1px rgba(0,0,0,.1)

.list_header_button
  display: inline-block
  height: 24px
  width: 24px
  border-radius: 3px
  span
    height: 100%
    width: 100%
  &:hover
    background: rgba(0, 0, 0, 0.1)

.list_header
  padding: 8px
  div:first-child
    float: left
    width: 230px
    line-height: 24px
  .ellipsis_icon
    float: right
    .ellipsis_icon_list_options:before
      height: 100%
      width: 100%
      position: relative
      top: 2px
      left: 2px
      content: url("../images/ellipsis_icon_dark.png")
  input[type="text"]
    border-style: none
    border-radius: 3px
    height: 24px
    width: 100%
    padding: 5px
    background-color: colors.grayLight
    font-size: 14px
    font-weight: bold
    color: colors.grayDark
.list_footer
  color: colors.grayMed3
  form, .footer_add_a_card
    padding: 8px
  form
    display: none
    textarea
      display: block
      padding: 10px
      margin-bottom: 8px
      font-size: 14px
      color: colors.grayDark
      height: 75px
      width: 100%
      border-style: none
      border-radius: 3px
      box-shadow: 0 1px 1px rgba(0,0,0,.2)
    #add_card_submit_or_cancel
      position: relative
      input, #cancel_add_card
        vertical-align: top
      .add_card_ellipsis
        display: inline-block
        position: absolute
        top: 0
        right: 5px
        width: 30px
        height: 30px
        border-radius: 3px
        &:hover
          background-color: rgba(0, 0, 0, .15)
      #cancel_add_card
        display: inline-block
        position: relative
        width: 30px
        height: 30px
        margin-left: 10px
        a
          display: block
          width: 100%
          height: 100%
          padding: 5px
          position: relative
          span
            width: 100%
            height: 100%
            position: relative
          &:hover
            span
              .cross_x, .cross_x:after
                background: colors.grayDark
  .footer_add_a_card
    display: block
    height: 100%
    width: 100%
    &:hover
      background: rgba(0, 0, 0, 0.1)

.cards
  clear: both
