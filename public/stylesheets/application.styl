@import "whitespace-reset.css"
@import "mixins"

*
  box-sizing: border-box

a
  text-decoration: none
  color: currentColor

textarea
  resize: none

input[type="submit"]
  width: 75px
  height: 30px
  border: 1px solid colors.greenMed3
  border-radius: 3px
  background: linear-gradient(to bottom, colors.greenMed1 0, colors.greenMed2 100%)
  color: colors.grayLight
  font-size: 14px
  font-weight: bold
  box-shadow: 0 1px 1px colors.greenDark;
  &:hover
    cursor: pointer
    background: linear-gradient(to bottom, colors.greenMed2 0, colors.greenMed3 100%)

html, body
  height: 100%
html
  display: block
  font: normal 14px "Helvetica Neue", Arial, Helvetica, sans-serif
body
  position: relative
  overflow: hidden
  background-size: cover
  background-color: colors.blueBackground

surface
  display: flex
  flex-direction: column
  height: 100%

#header
  position: relative
  display: block
  flex-basis: auto
  flex-grow: 0
  flex-shrink: 0
  padding: 5px
  height: 40px
  background-color: colors.headerDimmer
  z-index: 30
  box-shadow: 0 1px 1px rgba(0,0,0,.1)

#header_logo
  display: inline-block
  position: absolute
  top: 5px
  left: 50%
  margin-left: -40px
  height: 30px
  width: 5pc
  text-align: center
  background-image: url("../images/header_logo.png")
  opacity: 0.5
  &:hover
    opacity: 0.8

.header_button
  position: relative
  display: inline-block
  margin-right: 8px
  height: 30px
  border-radius: 3px
  span, #header_search_input
    height: 100%
    background: linear-gradient(to bottom, rgba(255,255,255,.3) 0, rgba(255,255,255,.2) 100%)
  &:hover
    > span, > #header_search_input, > a span
      background: linear-gradient(to bottom, rgba(255,255,255,.4) 0, rgba(255,255,255,.3) 100%)
  span
    display: inline-block
    padding: 0 10px
    line-height: 30px
    color: colors.grayLight
    border-radius: 3px
  #header_search_input
    vertical-align: top
    border-style: none
    border-top-left-radius: 3px
    border-bottom-left-radius: 3px
    color: colors.grayLight
    padding: 5px

#header_boards_button, #header_search
  float: left
#header_boards_button
  span:before
    padding: 5px 5px 5px 0
    margin-right: 5px
    height: 30px
    width: 30px
    position: relative
    top: 5px
    content: url("../images/header_logo2.png")
#header_search
  position: relative
  span
    padding: 5px
    border-top-left-radius: 0
    border-bottom-left-radius: 0
    content: url("../images/search_icon.png")
  #header_search_results
    position: relative
    display: none
    position: absolute
    top: 35px
    left: 0
    z-index: 50
    width: 500px
    max-height: 500px
    overflow: auto
    padding: 10px
    background-color: colors.grayLight3
    border: 1px solid colors.grayMed
    border-radius: 3px
    box-shadow: 0 1px 10px rgba(0,0,0,.3)
    &::-webkit-scrollbar
      width: .75em
    &::-webkit-scrollbar-track
      margin: 10px
      border-radius: 10px
    &::-webkit-scrollbar-thumb
      border-radius: 10px
      background-color: colors.grayMed2
      outline: 1px solid slategrey
    h2
      padding-bottom: 10px
      border-bottom: 1px solid colors.grayMed2
      font-size: 17px
      font-weight: bold
      text-align: center
      letter-spacing: 1px
      color: colors.grayDark
    #search_no_results
      display: block
      width: 100%
      margin-top: 10px
      text-align: center
      line-height: 50px
      font-size: 13px
      color: colors.grayMed2
    #search_results_list
      width: 100%
      .search_result
        padding: 5px 0 10px 0
        h3, h4
          font-size: 14px
        h3
          padding: 5px 0
          font-weight: bold
          color: colors.grayDark
          a:hover
            h4
              text-decoration: underline
        h4
          font-weight: normal
          color: colors.grayMed2
        strong
          font-weight: bolder
        + .search_result
          border-top: 1px solid colors.grayMed
  input[type="text"]:focus
    width: 200px
    background-color: colors.grayLight
    border-radius: 3px
    outline: none
    color: colors.grayDark
    font-weight: bold
    font-size: 13px
    + span
      display: none



#header_add_board, #header_username, #header_notifications
  float: right
#header_add_board
  span
    width: 30px
    height: 30px
    position: relative
    .cross
      background: colors.grayLight
      height: 16px
      top: 7px
      left: 14px
      position: absolute
      width: 2px
    .cross:after
      background: colors.grayLight
      content: ""
      height: 2px
      left: -7px
      position: absolute
      top: 7px
      width: 16px
#header_username
  span:first-child
    padding-left: 5px
    padding-right: 5px
    background-color: colors.grayMed
    color: colors.grayDark
    font-weight: bold
    border-top-right-radius: 0
    border-bottom-right-radius: 0
  span:nth-child(2)
    padding-left: 5px
    border-top-left-radius: 0
    border-bottom-left-radius: 0
  &:hover > first-child
    background-color: colors.white
#header_notifications
  span
    width: 30px
    height: 30px
  span:before
    padding: 5px
    margin-left: -10px
    height: 30px
    width: 30px
    position: relative
    top: 5px
    content: url("../images/bell_icon.png")

#content
  position: relative
  flex-grow: 1
  overflow-y: auto

main
  position: absolute
  left: 0
  right: 0
  bottom: 0
  top: 0

#board_view, #board_selection_view
  height: 100%
  display: flex
  flex-direction: column

#board_selection_view
  overflow-y: scroll
  background-color: colors.grayLight
  .board_selection_header
    position: relative
    display: block
    padding: 40px 20px 0 20px
    .board_selection_header_button
      display: inline-block
    #person_icon, #star_icon_selection
      span:before
        margin-right: 10px
        height: 30px
        width: 30px
        position: relative
        top: 3px
    #person_icon
      span:before
        content: url("../images/user_icon.png")
    #star_icon_selection
      span:before
        content: url("../images/star_icon_gray.png")
    .board_selection_title
      font-size: 16px
      font-weight: bold
      letter-spacing: 0.75px
      color: colors.grayDark
  &::-webkit-scrollbar
    width: .75em
  &::-webkit-scrollbar-track
    margin: 10px
    border-radius: 10px
  &::-webkit-scrollbar-thumb
    border-radius: 10px
    background-color: colors.blueLight
    outline: 1px solid slategrey

#starred_boards
  display: none

#personal_boards
  padding-bottom: 20px

.boards_wrapper
  padding: 0 20px

.board_selector_view
  display: inline-block
  vertical-align: top
  margin-right: 20px
  margin-top: 20px
  width: 265px
  height: 95px
  border-radius: 3px
  .board_selector_container
    display: block
    padding: 10px
    width: 100%
    height: 100%
    border-radius: 3px
    .board_selector_header_div
      display: inline-block
    .board_title
      float: left
      color: colors.grayLight
    .header_selector_star_icon
      float: right
      z-index: 10
