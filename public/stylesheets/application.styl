.label_yellow
  background-color: colors.labelYellow
.label_orange
  background-color: colors.labelOrange
.label_red
  background-color: colors.labelRed
.label_purple
  background-color: colors.labelPurple
.label_blue
  background-color: colors.labelBlue
.label_green
  background-color: colors.labelGreen


.cross_x
  background: colors.grayMed2
  height: 20px
