      .activity_description_comment
        h2, span
          display: block
        h4
          background-color: colors.grayLight
          border-radius: 3px
          box-shadow: 0 1px 1px rgba(0,0,0,.2)
          padding: 10px
          margin: 8px 0

#card_window_sidebar
  width: 22%
  padding: 70px 0 40px 15px
  h1
    margin-bottom: 5px
  ul
    margin-bottom: 20px
    li
